@model EquipamentoViewModel

@{
    ViewData["Title"] = "Cadastro de Equipamento";
}

<h2 class="text-center mb-4">Cadastro de Equipamento</h2>

<form asp-action="Salvar">
    <input type="hidden" value="@ViewBag.cadastroEquipamento" name="cadastroEquipamento" />
    <div class="container">
        <div class="row">
            <!-- Id e Nome na mesma linha -->
            <div class="col-md-3">
                <label for="Id" class="col-form-label">Id</label>
                @if (ViewBag.cadastroEquipamento == "I")
                {
                    <input type="text" name="Id" value="@Model.Id" class="form-control" />
                }
                else
                {
                    <input type="text" name="Id" value="@Model.Id" class="form-control" readonly />
                }
            </div>
            <div class="col-md-9">
                <label for="Nome" class="col-form-label">Nome</label>
                <input type="text" name="Nome" value="@Model.Nome" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-6">
                <label for="EmpresaId" class="col-form-label">Estado</label>
                <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.Empresas">
                    <option value="">Selecione uma Empresa</option>
                </select>
            </div>
            <!-- MacAddress -->
            <div class="col-md-6">
                <label for="MacAddress" class="col-form-label">Mac Address</label>
                <input type="text" name="MacAddress" value="@Model.MacAddress" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <!-- IpAddress -->
            <div class="col-md-6">
                <label for="IpAddress" class="col-form-label">IP Address</label>
                <input type="text" name="IpAddress" value="@Model.IpAddress" class="form-control" />
            </div>
            <!-- SSID -->
            <div class="col-md-6">
                <label for="SSID" class="col-form-label">SSID</label>
                <input type="text" name="SSID" value="@Model.SSID" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <!-- SignalStrength -->
            <div class="col-md-6">
                <label for="SignalStrength" class="col-form-label">Força do Sinal (dBm)</label>
                <input type="number" name="SignalStrength" value="@Model.SignalStrength" class="form-control" />
            </div>
            <!-- ConnectionStatus -->
            <div class="col-md-6">
                <label for="ConnectionStatus" class="col-form-label">Status da Conexão</label>
                <input type="text" name="ConnectionStatus" value="@Model.ConnectionStatus" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <!-- SensorData -->
            <div class="col-md-12">
                <label for="SensorData" class="col-form-label">Dados do Sensor</label>
                <textarea name="SensorData" class="form-control">@Model.SensorData</textarea>
            </div>
        </div>
        <br />

        <div class="row">
            <!-- StatusEquipamento -->
            <div class="col-md-6">
                <label for="StatusEquipamento" class="col-form-label">Status do Equipamento</label>
                <input type="text" name="StatusEquipamento" value="@Model.StatusEquipamento" class="form-control" />
            </div>
            <!-- AuthToken -->
            <div class="col-md-6">
                <label for="AuthToken" class="col-form-label">Token de Autenticação</label>
                <input type="text" name="AuthToken" value="@Model.AuthToken" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <!-- FirmwareVersion -->
            <div class="col-md-6">
                <label for="FirmwareVersion" class="col-form-label">Versão do Firmware</label>
                <input type="text" name="FirmwareVersion" value="@Model.FirmwareVersion" class="form-control" />
            </div>
            <!-- LastUpdate -->
            <div class="col-md-6">
                <label for="LastUpdate" class="col-form-label">Última Atualização</label>
                <input type="date" name="LastUpdate" value="@Model.LastUpdate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
        </div>
        <br />

        @if (ViewBag.cadastroEquipamento != "I")
        {
            <div class="row">
                <!-- Data de Registro -->
                <div class="col-md-6">
                    <label for="DataRegistro" class="col-form-label">Data de Registro</label>
                    <input type="date" name="DataRegistro" value="@Model.DataRegistro.ToString("yyyy-MM-dd")" class="form-control" />
                </div>
                <!-- Data de Alteração -->
                <div class="col-md-6">
                    <label for="DataAlteracao" class="col-form-label">Data de Alteração</label>
                    <input type="date" name="DataAlteracao" value="@(Model.DataAlteracao.HasValue ? Model.DataAlteracao.Value.ToString("yyyy-MM-dd") : "")" class="form-control" />
                </div>
            </div>
            <br />
        }

        <!-- Botão de Submit -->
        <div class="row">
            <div class="col-md-12 text-center">
                <input type="submit" class="btn btn-success" value="Salvar" />
            </div>
        </div>
    </div>
</form>

